extends layout

block head
        meta(name='viewport' content='width=device-width, initial-scale=1')
        link(rel='stylesheet' href='/stylesheets/catalogCreation.css')
        script(src='/javascripts/catalogCreation.js')
        title Edit Catalog

block content
    // Side bar
    .sidenav
        a#home
            i.material-icons home
            |  Home
        a#mycatalogs(style='background-color: #FFDE59;')
            i.material-icons collections_bookmark
            |  My Catalogs
        a#following
            i.material-icons person
            |  Following
        a#trending
            i#trendingicon.material-icons trending_up
            |  Trending
    .main
        .grid-container
            .grid-item
                .catalog(id="catalog")
                    input.catalog_title(type='textCatalogTitle' placeholder='Add Title', class = 'cat0', maxlength = "45")
                .catalog_entry(id="catalog_entry")
                    input.catalog_link(type='textCatalog' placeholder='Add Link' class='catalog_link')
                    input.catalog_description(type='textCatalog' placeholder='Add Description' class='catalog_description', maxlength = "150")
                .catalog_image
                    button.add_links(type='button' id='addLinks') Add New Link
                    button.catalog_add(type='button' id='save') Save Catalog
    