extends layout

block head
        meta(name='viewport' content='width=device-width, initial-scale=1')
        link(rel='stylesheet' href='/stylesheets/catalogCreation.css')
        title Edit Catalog

block content
    // Side bar
    .sidenav
        a#home
            i.material-icons home
            |  Home
        a#mycatalogs(style='background-color: #FFDE59;')
            i.material-icons collections_bookmark
            |  My Catalogs
        a#following
            i.material-icons person
            |  Following
        a#trending
            i#trendingicon.material-icons trending_up
            |  Trending
    .main
        .grid-container
            .grid-item
                .catalog
                    p.catalog_title Add Title
                    p.catalog_author by Author
                    p.catalog_link Link
                    p.catalog_description Add Description
                    p.catalog_add
                        img(src='https://image.flaticon.com/icons/png/512/32/32360.png' style='width:30px;height:30px;')
                    p.catalog_s  Add New
                    p
                .catalog_image
