extends layout

block head
	title Login
	meta(name='viewport' content='width=device-width, initial-scale=1')
	link(rel='stylesheet' href='/stylesheets/logInSignUp.css')
	script(src='/javascripts/login.js')

block content
	//Side bar
	.sidenav
		button#home(type='button')
			i.material-icons home
			|  Home
		//- button#trending(type='button')
		//- 	i#trendingicon.material-icons trending_up
		//- 	|  Trending
	.main
		.loginForm
			h3 Log in to LinkSpace

			| Username
			input.login#username(type='text')
			br
			| 				Password
			input.login#password(type='password')
			br
			button.button#submit Log in
			br
			a
				button#signup(style='margin-top: 20px') Don't have an account? Sign up here
