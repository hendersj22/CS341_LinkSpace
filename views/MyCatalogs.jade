extends layout

block head
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='stylesheet' href='/stylesheets/trendingStyle.css')
    script(src='/javascripts/yourCatalog.js')
    script(src='/javascripts/viewCatalog.js')

block content
    // Side bar
    .sidenav
        a#home
          i.material-icons home
          |  Home
        a#mycatalogs(style='background-color: #FFDE59;')
          i.material-icons collections_bookmark
          |  My Catalogs
        a#following
          i.material-icons person
          |  Following
        a#trending
          i#trendingicon.material-icons trending_up
          |  Trending
    // Credit goes to Kai Vickers for creating code for tiles
    #trenddiv.main
        h3#trend Loading...
        .grid-container#catContainer
            