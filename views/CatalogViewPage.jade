extends layout

block head
    script(src='/javascripts/copyCatalog.js')
    link(rel='stylesheet' href='/stylesheets/CatalogViewPage.css')
    script(src='/javascripts/catalogClickHandler.js')
    script(src='/javascripts/viewCatalog.js')
    title Catalog View Page


block content
    // Side bar
    .sidenav
        button#home
            i.material-icons home
            |  Home
        button#mycatalogs(style='background-color: #FFDE59;')
            i.material-icons collections_bookmark
            |  My Catalogs
        button#following
            i.material-icons person
            |  Following
        button#trending
            i#trendingicon.material-icons trending_up
            |  Trending
    .main
        .grid-container
            .grid-item
                .catalog
                    p.catalog_title Loading...
                    p.catalog_author
                .catalog_image
                    button#copy(type='button') Copy Catalog
                    button#edit(type='button') Edit Catalog
                    button#delete(type='button') Delete Catalog
                    
